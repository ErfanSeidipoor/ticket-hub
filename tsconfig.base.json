{
  "compileOnSave": false,
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tickethub/auth/*": ["apps/auth/src/*"],
      "@tickethub/decorator": ["libs/decorator/src/index.ts"],
      "@tickethub/dto": ["libs/dto/src/index.ts"],
      "@tickethub/enums": ["libs/enums/src/index.ts"],
      "@tickethub/error": ["libs/error/src/index.ts"],
      "@tickethub/event": ["libs/event/src/index.ts"],
      "@tickethub/guard": ["libs/guard/src/index.ts"],
      "@tickethub/middleware": ["libs/middleware/src/index.ts"],
      "@tickethub/module": ["libs/module/src/index.ts"],
      "@tickethub/pipe": ["libs/pipe/src/index.ts"],
      "@tickethub/tickets/*": ["apps/tickets/src/*"],
      "@tickethub/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
